#include <bits/stdc++.h>
using namespace std;
int main(){
ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#ifndef ONLINE_JUDGE
    freopen("input.txt","r",stdin);
    freopen("output.txt","w",stdout);
#endif


ll n;
cin>>n;
while(true){
    cout<<n<<" ";
    if(n==1)break;
    if(n%2==0){
    n=n/2;
  
    }
    else
    {
        n=(3*n)+1;
    }
    
}

    return 0;
}
